<% layout('layouts/boilerplate') %>
<body>
  <div class="container my-4">

    <% if (!loggedIn) { %>
      <!-- Not logged-in message -->
      <div class="d-flex flex-column justify-content-center align-items-center text-center" style="min-height: 70vh;">
  <h2 class="text-muted mb-3">Welcome to NoteNest!</h2>
  <p class="text-secondary mb-4 fs-6">
    Start by logging in or signing up to create and manage your personal notes.Once you create notes, they will appear here!
  </p>
  <div>
    <a href="/login" class="btn btn-primary btn-lg me-2">Login</a>
    <a href="/signup" class="btn btn-outline-primary btn-lg">Signup</a>
  </div>
</div>

    <% } else if (allNotes.length === 0) { %>
      <!-- Logged-in but zero notes -->
      <div class="d-flex flex-column justify-content-center align-items-center text-center" style="min-height: 70vh;">
        <h4 class="text-muted mb-3">Welcome, <%= currUser.username %>!</h4>
        <h4 class="text-muted mb-3">You haven't created any notes yet.</h4>
        <p class="text-secondary mb-4" ">
          Start by adding your first note and organize your ideas, tasks, or reminders here. Your notes will appear here once you create them.
        </p>
        <a href="/Notes/new" class="btn btn-primary btn-lg">Add your first note</a>
      </div>

    <% } else { %>
      <!-- Logged-in with notes -->
      <div class="row">
        <% for(let note of allNotes){ %>
          <div class="col-12 col-md-6 col-lg-4 d-flex">
            <div class="card my-3 shadow-sm flex-fill" style="cursor: pointer" onclick="window.location.href='/Notes/<%= note._id %>'">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">
                  <a href="/Notes/<%= note._id %>" class="text-decoration-none text-dark">
                    <%= note.title %>
                  </a>
                </h5>
                <p class="card-text text-muted">
                  <%= note.description.length > 100 ? note.description.substring(0,100) + '...' : note.description %>
                </p>
                <div class="mt-auto d-flex justify-content-between align-items-center">
                  <small class="text-secondary"><%= note.createdAt.toDateString() %></small>
                  <div class="d-flex gap-2">
                    <a href="/notes/<%= note._id %>/edit" class="btn btn-sm btn-outline-secondary">
                      <i class="fa-solid fa-pencil"></i>
                    </a>
                    <form method="POST" action="/Notes/<%= note._id %>?_method=DELETE" class="d-inline">
                      <button type="submit" class="btn btn-sm btn-outline-danger">
                        <i class="fa-solid fa-trash"></i>
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    <% } %>

  </div>
</body>
