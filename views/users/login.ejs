<% layout("layouts/boilerplate") %>

<body class="bg-light">

  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-5">

        <!-- Login Card -->
        <div class="card shadow-sm rounded-3 p-4" style="max-width: 700px; width: 100%;">
          <h3 class="text-center mb-4 text-truncate" style="white-space: nowrap;">
            Login to NoteNest
          </h3>

          <form action="/login" method="POST" class="needs-validation" novalidate>
            
            <!-- Username -->
            <div class="mb-3">
              <label for="username" class="form-label fw-bold">Username</label>
              <input 
                type="text"
                name="username" 
                id="username" 
                class="form-control" 
                placeholder="Enter your username"
                required
                minlength="3"
              >
              <div class="invalid-feedback">
                Username is required and must be at least 3 characters.
              </div>
            </div>

            <!-- Password -->
            <div class="mb-3">
              <label for="password" class="form-label fw-bold">Password</label>
              <input 
                type="password"
                name="password" 
                id="password" 
                class="form-control" 
                placeholder="Enter your password"
                required
              >
              <div class="invalid-feedback">
                Password is required and it must be valid.
              </div>
            </div>

            <button type="submit" class="btn btn-success w-100">Login</button>
          </form>

          <div class="text-center mt-3">
            <a href="/signup" class="text-decoration-none">
              Don't have an account? Sign Up
            </a>
          </div>
        </div>

      </div>
    </div>
  </div>

  <script src="/JS/script.js"></script>

</body>
